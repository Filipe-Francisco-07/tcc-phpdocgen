{
  "require": { "nikic/php-parser": "^5.6" },
  "replace": {
    "herrera-io/json": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "Parser\\": "src/Parser/",
      "Util\\": "src/Util/",
      "Generator\\": "src/Generator/",
      "Analyser\\": "src/Analyser/"
    }
  },
  "scripts": {
    "lint": "php -l input/entrada.php",
    "cs:fix": "php-cs-fixer fix --using-cache=no",
    "stan": "phpstan analyse src --level=max",
    "docgen": "php bin/run.php",
    "tests": "vendor/bin/phpunit",
    "gen-tests": "php tools/gen-tests.php",
    "test": "vendor/bin/phpunit",
    "phpdoc": "vendor/bin/phpdoc -c phpdoc.xml"

  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "3.64",
    "squizlabs/php_codesniffer": "3.9",
    "phpstan/phpstan": "1.11"
  }
}
